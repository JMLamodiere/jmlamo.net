{% extends 'JmlamoDemoBundle::base.html.twig' %}
{% block title %}{{ products|length }} products{% endblock %}
{% block body %}
    <h1>{{ products|length }} products found</h1>
    <table>
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <th scope="row">{{ product.id }}</th>
                <td><a href="{{ path('jmlamo_demo_doctrine_show', {id: product.id}) }}">{{ product.name }}</a></td>
                <td>{{ product.price }}</td>
                <td><a href="{{ path('jmlamo_demo_doctrine_update', {id: product.id}) }}">Update name</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No product found matching your request.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}